@model BlogModel

<div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" value="@Model.BlogTitle">
</div>
<div class="form-group">
    <label for="author">Author</label>
    <input type="text" class="form-control" id="author" value="@Model.BlogAuthor">
</div>
<div class="form-group">
    <label for="content">Content</label>
    <input type="text" class="form-control" id="content" value="@Model.BlogContent">
</div>
<hr />
<button type="button" class="btn btn-primary" id="btnUpdate">Update</button>
<a class="btn btn-outline-primary" href="/Blog/Index">Cancel</a>
@section scripts {
    <script>
        $('#btnUpdate').click(
            function () {
                let title = $('#title').val();
                let author = $('#author').val();
                let content = $('#content').val();

                let reqModel = {
                    BlogTitle: title,
                    BlogAuthor: author,
                    BlogContent: content,
                };

                $.ajax({
                    url: "/Blog/Update/" + @Model.BlogID,
                    //data: JSON.stringify(empObj),
                    data: { blog: reqModel },
                    type: "POST",
                    //contentType: "application/json;charset=utf-8",
                    dataType: "json",
                    success: function (result) {
                        if (result.IsSucceed) {

                            Swal.fire({
                                title: "Success!",
                                text: result.Message,
                                icon: "success",
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    location.href = "/Blog";
                                }
                            });

                        } else {
                            Swal.fire({
                                title: "Error!",
                                text: result.Message,
                                icon: "error"
                            });
                        }
                    },
                    error: function (errormessage) {
                        alert(errormessage.responseText);
                    }
                });
            }
        )
    </script>
}
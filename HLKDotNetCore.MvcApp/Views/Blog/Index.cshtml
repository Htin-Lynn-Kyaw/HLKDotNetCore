@model List<BlogModel>

@{
    int count = 0;
}

<a class="btn btn-outline-success" href="/Blog/Create">Add new</a>
<hr />
<div id="item-container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Author</th>
                <th scope="col">Content</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr id="blog-@x.BlogID">
                    <th scope="row" class="Sr-No">@(++count)</th>
                    <td>@x.BlogTitle</td>
                    <td>@x.BlogAuthor</td>
                    <td>@x.BlogContent</td>
                    <td>
                        <a class="btn btn-outline-warning" href="/Blog/Edit/@x.BlogID">Edit</a>
                        <button class="btn btn-outline-danger btn-delete" data-id="@x.BlogID">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts {
    <script>
        $('.btn-delete').click(
            function () {
                let ID = $(this).data('id');
                Swal.fire({
                    title: 'Confirm Delete',
                    text: "Are you sure want to delete?",
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes'
                }).then((result) => {
                    if (result.isConfirmed) {
                        BlogDelete(ID);
                    }
                });
            }
        )

        function BlogDelete(ID) {
            $.ajax({
                url: "/Blog/Delete/" + ID,
                //data: JSON.stringify(empObj),
                //data: { blog: reqModel },
                type: "GET",
                //contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    if (result.IsSucceed) {

                        Swal.fire({
                            title: "Success!",
                            text: result.Message,
                            icon: "success",
                        }).then((result) => {
                            if (result.isConfirmed) {
                                //location.href = "/Blog";
                                $('#blog-' + ID).remove();
                                updateRowNumbers();
                            }
                        });

                    } else {
                        Swal.fire({
                            title: "Error!",
                            text: result.Message,
                            icon: "error"
                        });
                    }
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            });
        }

        function updateRowNumbers() {
            $('#item-container table tbody tr').each(function (index) {
                $(this).find('.Sr-No').text(index + 1);
            });
        }
    </script>
}